{
  "name": "nextjs-enterprise-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "cd frontend && next dev -p 3000",
    "dev:backend": "cd backend && nodemon server.js",
    "build": "cd frontend && next build",
    "start": "cd frontend && next start -p 3000",
    "lint": "echo \"No linter configured\""
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  }
}